rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Uploads usados pelo app (artigos e conteúdos editáveis)
    match /{allPaths=**} {
      allow read: if true;

      // Só usuários autenticados podem escrever
      // e com limite de 100MB por arquivo.
      // Observação: em deletes, request.resource é null.
      allow write: if request.auth != null
                   && (request.resource == null || request.resource.size < 100 * 1024 * 1024);
    }
  }
}
